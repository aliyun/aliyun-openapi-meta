{
  "name": "CreateLoadBalancer",
  "deprecated": false,
  "protocol": "HTTPS",
  "method": "POST",
  "pathPattern": "",
  "parameters": [
    {
      "name": "AdaptiveRouting",
      "description": "跨地址池回源配置。",
      "position": "Query",
      "type": "String",
      "required": false
    },
    {
      "name": "DefaultPools",
      "description": "默认地址池列表。",
      "position": "Query",
      "type": "Json",
      "required": true
    },
    {
      "name": "Description",
      "description": "负载均衡器的详细描述信息，便于管理和识别。",
      "position": "Query",
      "type": "String",
      "required": false
    },
    {
      "name": "Enabled",
      "description": "负载均衡器是否启用。\n\n- true：启用。\n- false：不启用。",
      "position": "Query",
      "type": "Boolean",
      "required": false
    },
    {
      "name": "FallbackPool",
      "description": "兜底地址池ID，当所有其他池不可用时，流量将被导向此处。",
      "position": "Query",
      "type": "Long",
      "required": true
    },
    {
      "name": "Monitor",
      "description": "监视器配置，用于健康检查。",
      "position": "Query",
      "type": "String",
      "required": true
    },
    {
      "name": "Name",
      "description": "负载均衡器名称，需要满足域名格式校验，并且是站点下的子域名。",
      "position": "Query",
      "type": "String",
      "required": true
    },
    {
      "name": "RandomSteering",
      "description": "加权轮询配置，用于控制不同地址池的流量分配权重。",
      "position": "Query",
      "type": "String",
      "required": false
    },
    {
      "name": "RegionPools",
      "description": "一级region对应的地址池。",
      "position": "Query",
      "type": "Any",
      "required": false
    },
    {
      "name": "Rules",
      "description": "规则信息。",
      "position": "Query",
      "type": "Json",
      "required": false,
      "sub_parameters": [
        {
          "name": "FixedResponse",
          "position": "Query",
          "type": "Struct",
          "required": false
        },
        {
          "name": "Overrides",
          "position": "Query",
          "type": "Any",
          "required": false
        },
        {
          "name": "Rule",
          "position": "Query",
          "type": "String",
          "required": false
        },
        {
          "name": "RuleEnable",
          "position": "Query",
          "type": "String",
          "required": false
        },
        {
          "name": "RuleName",
          "position": "Query",
          "type": "String",
          "required": false
        },
        {
          "name": "Sequence",
          "position": "Query",
          "type": "Integer",
          "required": false
        },
        {
          "name": "Terminates",
          "position": "Query",
          "type": "Boolean",
          "required": false
        }
      ]
    },
    {
      "name": "SessionAffinity",
      "description": "会话保持，取值：\n- off：不开启。\n- ip：按ip方式会话保持。\n- cookie: 按cookie方式会话保持。",
      "position": "Query",
      "type": "String",
      "required": false
    },
    {
      "name": "SiteId",
      "description": "站点ID，可通过调用[ListSites](~~ListSites~~)接口获取。",
      "position": "Query",
      "type": "Long",
      "required": true
    },
    {
      "name": "SteeringPolicy",
      "description": "负载均衡策略。\n\n- geo: 地址策略。\n- random: 加权轮询。\n- order: 主备方式。",
      "position": "Query",
      "type": "String",
      "required": true
    },
    {
      "name": "SubRegionPools",
      "description": "二级region对应的地址池，多个二级region共用一批地址池时，可以多个二级region，使用逗号拼接作为key。",
      "position": "Query",
      "type": "Any",
      "required": false
    },
    {
      "name": "Ttl",
      "description": "TTL值，DNS记录的生存时间，默认为30秒。取值范围：10-600。",
      "position": "Query",
      "type": "Integer",
      "required": false
    }
  ]
}