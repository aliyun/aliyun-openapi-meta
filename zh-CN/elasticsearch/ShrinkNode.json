      "description": "实例ID。",
      "position": "Path",
      "type": "String",
      "required": true
    },
    {
      "name": "body",
      "description": "请求体。",
      "position": "Body",
      "type": "Json",
      "required": false,
      "sub_parameters": [
        {
          "name": "host",
          "position": "Body",
          "type": "String",
          "required": false
        },
        {
          "name": "hostName",
          "position": "Body",
          "type": "String",
          "required": false
        },
        {
          "name": "nodeType",
          "position": "Body",
          "type": "String",
          "required": false
        },
        {
          "name": "port",
          "position": "Body",
          "type": "Integer",
          "required": false
        },
        {
          "name": "zoneId",
          "position": "Body",
          "type": "String",
          "required": false
        }
      ]
    },
    {
      "name": "clientToken",
