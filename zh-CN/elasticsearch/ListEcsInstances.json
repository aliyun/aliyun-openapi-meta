{
  "name": "ListEcsInstances",
  "deprecated": false,
  "protocol": "HTTP|HTTPS",
  "method": "GET",
  "pathPattern": "/openapi/ecs",
  "parameters": [
    {
      "name": "ecsInstanceIds",
      "description": "ECS实例ID列表。取值可以由多个实例ID组成一个JSON数组，最多支持100个ID，ID之间用半角逗号（,）隔开。",
      "position": "Query",
      "type": "String",
      "required": false
    },
    {
      "name": "ecsInstanceName",
      "description": "ECS实例名称。",
      "position": "Query",
      "type": "String",
      "required": false
    },
    {
      "name": "page",
      "description": "返回结果页数。最大值500。",
      "position": "Query",
      "type": "Integer",
      "required": false
    },
    {
      "name": "size",
      "description": "每页包含的结果数。默认值10，最大值500。",
      "position": "Query",
      "type": "Integer",
      "required": false
    },
    {
      "name": "tags",
      "description": "ECS实例标签，必须包含：\n\n- tagKey：标签键\n- tagValue：标签值",
      "position": "Query",
      "type": "String",
      "required": false
    },
    {
      "name": "vpcId",
      "description": "ECS实例所在的VPC ID。",
      "position": "Query",
      "type": "String",
      "required": false
    }
  ]
}