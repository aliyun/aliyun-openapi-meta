{
  "name": "ListTemplates",
  "deprecated": false,
  "protocol": "HTTP|HTTPS",
  "method": "GET",
  "pathPattern": "/api/v2/templates",
  "parameters": [
    {
      "name": "Content",
      "description": "模板内容过滤。",
      "position": "Query",
      "type": "String",
      "required": false
    },
    {
      "name": "Name",
      "description": "模板名称过滤。",
      "position": "Query",
      "type": "String",
      "required": false
    },
    {
      "name": "PageNumber",
      "description": "分页数，从1开始，默认为1。",
      "position": "Query",
      "type": "Integer",
      "required": false
    },
    {
      "name": "PageSize",
      "description": "分页大小，默认为10。",
      "position": "Query",
      "type": "Integer",
      "required": false
    },
    {
      "name": "Status",
      "description": "审核状态过滤。\n- 0 : 审核中。\n- 1 : 审核通过。\n- 2 : 审核不通过。",
      "position": "Query",
      "type": "Integer",
      "required": false
    },
    {
      "name": "Type",
      "description": "模板类型过滤。\n- 0 : 验证码。\n- 1 : 短信通知。\n- 2 : 推广短信。",
      "position": "Query",
      "type": "Integer",
      "required": false
    }
  ]
}