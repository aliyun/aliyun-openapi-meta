{
  "name": "SplitShard",
  "deprecated": false,
  "protocol": "HTTP|HTTPS",
  "method": "POST",
  "pathPattern": "/logstores/[logstore]/shards/[shard]?action=split",
  "parameters": [
    {
      "name": "key",
      "description": "The position where the shard is split.",
      "position": "Query",
      "type": "String",
      "required": false
    },
    {
      "name": "logstore",
      "description": "The name of the Logstore.",
      "position": "Path",
      "type": "String",
      "required": true
    },
    {
      "name": "project",
      "description": "The name of the project.",
      "position": "Host",
      "type": "String",
      "required": true
    },
    {
      "name": "shard",
      "description": "The ID of the shard.",
      "position": "Path",
      "type": "Integer",
      "required": true
    },
    {
      "name": "shardCount",
      "description": "The number of new shards that are generated after splitting.",
      "position": "Query",
      "type": "Integer",
      "required": false
    }
  ]
}